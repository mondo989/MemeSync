{
  "watch": [
    "src/**/*",
    "public/**/*"
  ],
  "ignore": [
    "media/**/*",
    "slides/**/*",
    "memes.json",
    "node_modules/**/*",
    "*.log",
    "*.tmp",
    "*.temp"
  ],
  "ext": "js,json,html,css",
  "env": {
    "NODE_ENV": "development"
  },
  "verbose": true,
  "delay": 1000
} 